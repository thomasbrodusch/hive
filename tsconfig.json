{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2021", "es2022.intl"],
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": [
    "node_modules"
  ],
}
